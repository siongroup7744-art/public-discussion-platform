  <footer>
    <p>© 2025 Обществено Обсъждане. Всички права запазени.</p>
    <p>Контакт: <a href="mailto:info@example.com">info@example.com</a></p>
  </footer>

  <script>
    const i18n = {
      bg: {
        title: "Добре дошли в Платформата за Обществено Обсъждане",
        subtitle: "Вашият глас има значение! Споделете своето мнение по важни теми.",
        "cat.education": "Образование",
        "desc.education": "Дискусии за образованието в България и света.",
        "cat.environment": "Околна среда",
        "desc.environment": "Дискусии за устойчиво развитие и околна среда.",
        "cat.health": "Здравеопазване",
        "desc.health": "Идеи за подобряване на здравните услуги.",
        chooseCategory: "Изберете категория",
        "opt.education": "Образование",
        "opt.environment": "Околна среда",
        "opt.health": "Здравеопазване",
        placeholder: {
          opinion: "Вашето мнение..."
        },
        btn: {
          send: "Изпратете"
        },
        thanks: "Благодарим ви за вашето мнение!"
      },
      en: {
        title: "Welcome to the Public Discussion Platform",
        subtitle: "Your voice matters! Share your opinion on important topics.",
        "cat.education": "Education",
        "desc.education": "Discussions about education in Bulgaria and worldwide.",
        "cat.environment": "Environment",
        "desc.environment": "Discussions on sustainable development and the environment.",
        "cat.health": "Healthcare",
        "desc.health": "Ideas to improve health services.",
        chooseCategory: "Choose a category",
        "opt.education": "Education",
        "opt.environment": "Environment",
        "opt.health": "Healthcare",
        placeholder: {
          opinion: "Your opinion..."
        },
        btn: {
          send: "Submit"
        },
        thanks: "Thank you for your opinion!"
      },
      de: {
        title: "Willkommen auf der Plattform für öffentliche Diskussionen",
        subtitle: "Ihre Stimme zählt! Teilen Sie Ihre Meinung zu wichtigen Themen.",
        "cat.education": "Bildung",
        "desc.education": "Diskussionen über Bildung in Bulgarien und weltweit.",
        "cat.environment": "Umwelt",
        "desc.environment": "Diskussionen über nachhaltige Entwicklung und Umwelt.",
        "cat.health": "Gesundheitswesen",
        "desc.health": "Ideen zur Verbesserung von Gesundheitsdiensten.",
        chooseCategory: "Kategorie wählen",
        "opt.education": "Bildung",
        "opt.environment": "Umwelt",
        "opt.health": "Gesundheitswesen",
        placeholder: {
          opinion: "Ihre Meinung...",
        },
        btn: {
          send: "Absenden"
        },
        thanks: "Danke für Ihre Meinung!"
      }
    };

    const langButtons = document.querySelectorAll('.languages button');
    const setLanguage = lang => {
      document.documentElement.lang = lang;
      document.querySelectorAll('[data-i18n]').forEach(el => {
        const key = el.getAttribute('data-i18n');
        const keys = key.split('.');
        let text = i18n[lang];
        keys.forEach(k => text = text[k] || '');
        el.textContent = text || el.textContent;
      });
      langButtons.forEach(btn => btn.classList.toggle('active', btn.getAttribute('data-lang') === lang));
    };

    langButtons.forEach(btn => {
      btn.addEventListener('click', () => setLanguage(btn.getAttribute('data-lang')));
    });

    setLanguage('bg');

    const cards = document.querySelectorAll('.cat-card');
    cards.forEach(card => {
      card.addEventListener('click', () => {
        cards.forEach(c => c.classList.remove('selected'));
        card.classList.add('selected');
        document.getElementById('category-select').value = card.getAttribute('data-cat');
      });
    });

    document.getElementById('submit-btn').addEventListener('click', () => {
      const cat = document.getElementById('category-select').value;
      const opinion = document.getElementById('user-opinion').value.trim();
      if (!cat || !opinion) {
        alert('Моля, изберете категория и напишете вашето мнение.');
        return;
      }
      console.log('Opinion submitted:', { category: cat, text: opinion });
      document.getElementById('thank-you').style.display = 'block';
      setTimeout(() => {
        document.getElementById('thank-you').style.display = 'none';
      }, 3000);
      document.getElementById('user-opinion').value = '';
      document.getElementById('category-select').value = '';
      cards.forEach(c => c.classList.remove('selected'));
    });
  </script>
</body>
</html>
